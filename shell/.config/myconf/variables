# setting editor
if hash vim 2>/dev/null;then
  export EDITOR='vim'
  if hash nvim 2>/dev/null;then
    export EDITOR='nvim'
    if hash lvim 2>/dev/null;then
      export EDITOR='lvim'
    fi
  fi
fi

if hash fd 2>/dev/null;then
  export FZF_CTRL_T_COMMAND="fd --type f --hidden"
fi
if hash batcat 2>/dev/null;then
  export FZF_CTRL_T_OPTS="--preview 'batcat -p --color=always {}'"
else
  export FZF_CTRL_T_OPTS="--preview 'cat -p --color=always {}'"
fi
export BAT_THEME="TwoDark"
export PNPM_HOME="/home/niksingh710/.local/share/pnpm"

