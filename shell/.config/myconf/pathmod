# I update the PATH Variable for the system

add_path(){
    ARR=("$@")
    NEWPATH="$PATH"
    export PATH=""
    for i in "${ARR[@]}"
      do
       [ -d $i ] && NEWPATH=$NEWPATH:$i
      done
    export PATH=$NEWPATH
}
PATHLIST=(
   "$HOME/.local/bin"
   "$HOME/Personal/bin"
   "$HOME/Android/Sdk/platform-tools"
   "$HOME/.cargo/bin"
   "$HOME/go/bin"
   "$HOME/flutter/bin"
   "$HOME/.fnm"
   "$PNPM_HOME"
)
add_path ${PATHLIST[@]}
unset -f add_path

