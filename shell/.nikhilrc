CONFIGDIR="$HOME/.config"
MCONFIGDIR="$HOME/.config/myconf"
[ -f "$MCONFIGDIR/pathmod" ] && source "$MCONFIGDIR/pathmod"
[ -f "$MCONFIGDIR/aliases/alias" ] && source "$MCONFIGDIR/aliases/alias"

if hash fnm 2>/dev/null;then
	eval "$(fnm env)"
fi

if hash colorscript 2>/dev/null;then
  colorscript -r
fi

if hash vim 2>/dev/null;then
  export EDITOR='vim'
  if hash nvim 2>/dev/null;then
    export EDITOR='nvim'
    if hash lvim 2>/dev/null;then
      export EDITOR='lvim'
    fi
  fi
fi

# shell sourcing (These all get sourced on the basis of which shell in process)
if [ $(ps -p $$ | awk '{if(NR==2) print $4}') = 'bash' ];then
    [ -f "$CONFIGDIR/bash/bash" ] && source "$CONFIGDIR/bash/bash"
fi

if [ $(ps -p $$ | awk '{if(NR==2) print $4}') = 'zsh' ];then
   [ -f "$CONFIGDIR/zsh/zsh" ] && source "$CONFIGDIR/zsh/zsh"
fi

